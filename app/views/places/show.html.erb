<% if @current_user != nil %>

<h1><%= @place["name"] %></h1>

<p>
<a class="btn btn-primary" href="/posts/new" role="button">New Post</a>
</p>

<div colass="row">
  <% for post in @posts %>
    <div class="col-lg-4">
      <h3><%= post["title"] %></h3>
      <h4><%= post["posted_on"] %></h4>
      <p><img src="<%= post["image"] %>" class="img-fluid"></p>
      <p><%= post["description"] %></p>
    </div>
  <% end %>


<p>
  <a href="/places">Back to All Places</a>
</p>

<%end%>